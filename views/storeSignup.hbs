<div class="register-photo">
    <div class="form-container">
        <form id="login_form">
            <a href="/homepage" class="text-dark">
                <h1 class="text-center"><strong>ReviewMe!</strong></h1>
            </a>
            <h2 class="text-center"><strong>Enter Store Details</strong></h2>
            <div class="form-group"><input class="form-control" type="text" id="storeSignup_name"
                    name="storeSignup_name" required="" placeholder="Store Name"></div>
            <div class="form-group"><textarea class="form-control" id="storeSignup_description"
                    name="storeSignup_description" required="" placeholder="Store Description"></textarea>
            </div>
            <div class="form-group"><button class="btn btn-success btn-block" role="button"
                    id="storeSignup_submit">Finish</button>
            </div>
        </form>
        <p hidden id="storeSignup_userID">{{userID}}</p>
    </div>
</div>