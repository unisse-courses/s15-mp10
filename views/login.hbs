<div class="login-clean">
    <form>
        <h2 class="sr-only">Login Form</h2>
        <a href="/" class="text-dark">
            <h3 class="text-center"><strong>ReviewMe!</strong></h3>
        </a>
        <div class="illustration"></div>
        <div class="form-group"><input class="form-control" type="text" name="login_email" id="login_email"
                placeholder="Email"></div>
        <div class="form-group"><input class="form-control" type="password" name="login_password" id="login_password"
                placeholder="Password"></div>
        <div class="form-group">
            <button id="login_submit" role="button" class="btn btn-outline-success btn-block">Log In</button>
        </div>
        <div class="form-group">
            <a class="btn btn-success btn-block" role="button" href="/signup">Sign Up</a>
        </div>
    </form>
</div>